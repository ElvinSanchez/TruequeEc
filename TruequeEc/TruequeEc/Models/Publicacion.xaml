<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruequeEc.Publicacion">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Decripción del Producto"/>
            <Entry x:Name="Descripcion"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" x:Name="btnTomarFoto" Text="Tomar foto" Clicked="btnTomarFoto_Clicked"/>
                <Button Grid.Row="0" Grid.Column="1" x:Name="btnSeleccionarFoto" Text="Seleccionar Foto" Clicked="btnSeleccionarFoto_Clicked"/>
            </Grid>
            <Image x:Name="Imagen"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>