<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruequeEc.MainPage">

    <StackLayout>
        <Label x:Name="lblUser" Text="Bienvenidos a TruequeEc" HorizontalTextAlignment="Center" TextColor="Black" FontAttributes="Bold" FontSize="30"/>
        <Image Source="TruequeEc.png" WidthRequest="250" HeightRequest="250" />
        <Label x:Name="lblUser1" IsVisible="false"/>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>

        <Button x:Name="btnPerfil" Text="MI PERFIL" BorderRadius="20" FontAttributes="Bold" Clicked="btnPerfil_Clicked" />
        <Button x:Name="btnPublicar" Text="PUBLICAR" BorderRadius="20" FontAttributes="Bold" Clicked="btnPublicar_Clicked" />
        <Button x:Name="btnMuro" Text="MIS PUBLICACIONES" BorderRadius="20" FontAttributes="Bold" Clicked="btnMuro_Clicked" />
        <Button x:Name="btnTrueque" Text="TRUEQUE" BorderRadius="20" FontAttributes="Bold" Clicked="btnTrueque_Clicked" />
    </StackLayout>

</ContentPage>
