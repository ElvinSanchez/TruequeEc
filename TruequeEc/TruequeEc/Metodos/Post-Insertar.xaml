<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruequeEc.Metodos.Post_Insertar"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txtNombre" Placeholder="Nombres"/>
            <Entry x:Name="txtApellido" Placeholder="Apellidos"/>
            <Entry x:Name="txtCorreo" Placeholder="Correo"/>
            <Entry x:Name="txtCiudad" Placeholder="Ciudad"/>
            <Entry x:Name="txtTelefono" Placeholder="Teléfono"/>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Row="0" Grid.Column="0" Text="Insertar"
                    x:Name="btnIngresar"
                    Clicked="btnIngresar_Clicked">
                </Button>
                <Button Grid.Row="0" Grid.Column="1" Text="Regresar"
                    x:Name="btnRegresar"
                    Clicked="btnRegresar_Clicked">
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>