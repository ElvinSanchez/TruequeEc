<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TruequeEc.Views.Password">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection Title="Cambio de Contraseña">
                        <EntryCell x:Name="User" Label="Usuario" Placeholder="Ingrese el Usuario"/>
                        <EntryCell x:Name="Pass" Label="Password" Placeholder="Ingrese la Contraseña"/>
                        <EntryCell x:Name="RePass" Label="RePassword" Placeholder="Repita la Contraseña"/>
                    </TableSection>
                </TableRoot>
            </TableView>
            <Button x:Name="Actualizar" Text="Actualizar Contraseña" Clicked="Actualizar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>